{
  "name": "labs-authorization-service",
  "version": "0.0.2",
  "description": "Full stack authorization Service",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "lint": "./node_modules/.bin/spacey-standard",
    "test": "npm run pg:init && npm run pg:load-test-data && LABS_AUTH_SERVICE_logger_pino_level=silent ./node_modules/.bin/lab",
    "coverage": "LABS_AUTH_SERVICE_logger_pino_level=silent ./node_modules/.bin/lab -r html -o coverage.html",
    "pg:build": "docker-compose build",
    "pg:start": "docker-compose up -d",
    "pg:stop": "docker-compose down",
    "pg:init": "node scripts/init/database/init.js && node database/migrate.js --version=001",
    "pg:load-test-data": "./scripts/init/database/db_load.sh | tee ./logs/load-test-data.log"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/labs-authorization.git"
  },
  "author": "Mark Ireland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nearform/labs-authorization/issues"
  },
  "homepage": "https://github.com/nearform/labs-authorization#readme",
  "dependencies": {
    "async": "2.1.4",
    "hapi": "16.0.1",
    "hapi-pino": "1.3.0",
    "hapi-swagger": "7.5.0",
    "iam-js": "git+http://git@github.com/nearform/iam-js.git",
    "inert": "4.0.3",
    "joi": "10.0.5",
    "jsonfile": "2.4.0",
    "lodash": "^4.17.3",
    "minimist": "1.2.0",
    "pg": "6.1.1",
    "reconfig": "3.2.0",
    "uuid": "^3.0.1",
    "vision": "4.1.1"
  },
  "devDependencies": {
    "code": "4.0.0",
    "lab": "11.2.1",
    "pino": "3.0.5",
    "proxyquire": "1.7.10",
    "spacey-standard": "4.0.0",
    "postgrator": "2.8.2",
    "pre-commit": "1.2.2"
  }
}
